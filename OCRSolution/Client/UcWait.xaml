<UserControl x:Class="Client.UcWait"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid x:Name="gWait" Background="Black" Opacity="0.4" Visibility="Hidden">
        
        <MediaElement x:Name="meWait"
                          Width="80" Height="80"
                          UnloadedBehavior="Manual"  LoadedBehavior="Play" />

        <TextBlock x:Name="txtMsg" Text="请稍候..." Background="Red" Opacity="1" 
                   FontSize="26"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="0 120 0 0" />
    </Grid>
</UserControl>
